# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{txt,json,toml,yml,yaml}]
indent_style = space
indent_size = 4

[*.{c,h,zig,rs,sh}]
indent_style = space
indent_size = 4

[*.{nim,py}]
indent_style = space
indent_size = 2

[*.{lua,moon}]
indent_style = space
indent_size = 3

[Makefile]
indent_style = tab

