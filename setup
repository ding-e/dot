#!/bin/sh


# 用於mac下的配置連接
# ===========================================================

# kitty
ln -sf "$PWD/kitty/kitty.conf" "$HOME/.config/kitty/"
ln -sf "$PWD/kitty/kitty_search" "$HOME/.config/kitty/"

# tmux
ln -sf "$PWD/d.tmux.conf" "$HOME/.tmux.conf"

# nvim nvchad
ln -sf "$PWD/nvim-nvchad/custom" "$HOME/.config/nvim/lua"

# vim
mkdir "$HOME/.vim/" "$HOME/.vim/autoload" "$HOME/.vim/plugged"
ln -sf "$PWD/vim/autoload/plug.vim" "$HOME/.vim/autoload/plug.vim"
ln -sf "$PWD/d.vimrc" "$HOME/.vimrc"

# zsh
ln -sf "$PWD/ohmyzsh/Chicago95.zsh-theme" "$HOME/.oh-my-zsh/themes/"
ln -sf "$PWD/ohmyzsh/Chicago95_Dinge.zsh-theme" "$HOME/.oh-my-zsh/themes/"
ln -sf "$PWD/ohmyzsh/dinge.zsh-theme" "$HOME/.oh-my-zsh/themes/"
ln -sf "$PWD/d.zshrc" "$HOME/.zshrc"

# zls
ln -sf "$PWD/zls/zls.json" "$HOME/Library/Application Support/zls.json"

# vscode
ln -sf "$PWD/vscode/settings.json" "$HOME/Library/Application Support/Code/User/settings.json"
ln -sf "$PWD/vscode/keybindings.json" "$HOME/Library/Application Support/Code/User/keybindings.json"

